{% extends '@AppBundle/Resources/views/default/index.html.twig' %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}
    <div class="section__title text-center">
        <h1 class="title__line">Reclamation List</h1>
    </div>
    </br> </br>
    <div>
        <input id="myInput" type="search" placeholder="Search ..."  style="background-image: url({{ asset('images/icon/seachicon.png')}}) ;background-repeat: no-repeat ; height: 40px ; background-position: right center"  />
    </div>
    <br><br>
<div class="wishlist-table table-responsive">
    <table>

        <thead>

            <tr>
                <th><h4>Titre</h4></th>
                <th><h4>Statut</h4></th>
                <th><h4>Date</h4></th>
                <th><h4>Description</h4></th>
                <th><h4>Actions</h4></th>
            </tr>

        </thead>

        <tbody id="myTable">
        {% for reclamer in reclamers %}
            <tr>
                <td>{{ reclamer.nomReclamation }}</td>
                <td><a href="{{ path('reclamer_show', { 'idReclamation': reclamer.idReclamation }) }}">{{ reclamer.statut }}</a></td>
                <td>{{ reclamer.date | date('Y-m-d')  }}</td>
                <td>{{ reclamer.description }}</td>

                <td>
                    <ul>
                        <li>
                            <h4> <a href="{{ path('reclamer_show', { 'idReclamation': reclamer.idReclamation }) }}">show</a></h4>
                        </li>
                        <li>
                          <h4><a href="{{ path('reclamer_edit', { 'idReclamation': reclamer.idReclamation }) }}">edit</a><h4>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div id="mc_embed_signup_scroll" class="htc__news__inner">
    <div class="choose__inner">
    <ul>
        <li>
            <h4> <a href="{{ path('reclamer_new') }}">Add Reclamation</a></h4>
        </li>
    </ul>
    </div>
</div>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
